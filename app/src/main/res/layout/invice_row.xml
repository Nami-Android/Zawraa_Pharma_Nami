<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.zawraapharma.models.InvoiceModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lines="2"
            android:ellipsize="end"
            tools:ignore="SmallSp"
            android:text='@{model.company_fk!=null?model.company_fk.title:""}'
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lines="2"
            android:ellipsize="end"
            tools:ignore="SmallSp"
            android:text="@{model.code}"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lines="2"
            android:ellipsize="end"
            tools:ignore="SmallSp"
            android:text="@{model.date}"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvRemain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            tools:ignore="SmallSp"

            />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="45dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:background="@drawable/small_rounded_gray"
            android:text="@{model.amount}"
            />
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/imageEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src='@{model.selected?@drawable/ic_edit2:@drawable/ic_correct}'
            android:padding="3dp"
            app:tint="@color/colorPrimary"
            />
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>

    </LinearLayout>

</layout>